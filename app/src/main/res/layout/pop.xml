<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/cardview_shadow_start_color"
    android:orientation="vertical"
    android:padding="5dp"
    android:theme="@style/Theme.AppCompat">

    <TextView
        android:id="@+id/resultt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Копировать содержимое " />

    <Button
        android:id="@+id/open"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/open_app"
        android:layout_marginBottom="-11dp"
        android:text="Открыть в браузере" />

    <Button
        android:id="@+id/open_app"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn_copy"
        android:layout_marginBottom="-11dp"
        android:text="Открыть в приложении" />

    <Button
        android:id="@+id/new_scan"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/open"
        android:layout_marginBottom="-11dp"
        android:text="Сканировать" />
</RelativeLayout>